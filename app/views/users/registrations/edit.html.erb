<div class='row justify-content-sm-center edit-user-container'>
  <div class='col col-md-10 col-sm-12'>
    <div class='row justify-content-sm-center'>
      <div class='col col-md-4 col-sm-6 align-self-center'>
        <%= image_tag 'placeholder', class: 'avatar' %>
      </div>
      <div class='col col-md-8 col-sm-10'>

        <div class='row justify-content-sm-center'>
          <div class='col col-md-9 col-sm-10 form-container'>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class='form-group'>
                <%= f.text_field :username,
                  autofocus: true,
                  placeholder: 'Usuario',
                  class: 'form-control'
                %>
              </div>

              <div class='form-group'>
                <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
              </div>

              <div class='form-group'>
                <small class='text-muted'>
                  Dejar en blanco si no se quiere modificar
                </small>
                <%= f.password_field :password,
                  placeholder: 'Nueva contrase침a',
                  class: 'form-control'
                %>
              </div>

              <div class='form-group'>
                <%= f.password_field :password_confirmation,
                  placeholder: 'Repetir contrase침a',
                  class: 'form-control'
                %>
              </div>

              <div class='form-group'>
                <small class='text-muted'>
                  Requerida para cualquier modificaci칩n
                </small>
                <%= f.password_field :current_password,
                  placeholder: 'Contrase침a actual',
                  class: 'form-control'
                %>
              </div>

              <div class='row'>
                <div class='col col-sm-4'>
                  <%= f.submit 'Guardar', class: 'btn btn-success edit-form-btn' %>
                </div>
              <% end %>

              <div class='col col-sm-4'>
                <%= link_to 'Regresar', :back, class: 'btn btn-info edit-form-btn' %>
              </div>
              <div class='col col-sm-4'>
                <%= button_to 'Eliminar',
                  registration_path(resource_name),
                  data: { confirm: 'Seguro?' },
                  method: :delete,
                  class: 'btn btn-danger edit-form-btn'
                %>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
