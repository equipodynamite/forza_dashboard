<div class='row justify-content-sm-center crunches-form'>
	<div class='col-sm-12 form-title'>
		<h5>Abdominales (Crunches)</h5>
	</div>
	<div class='col-sm-10 form-content'>
		<div class='form-group row justify-content-sm-center'>
			<%= f.number_field :crunches, placeholder: 'Repeticiones', class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_form, crunches_form_options_for_select, { include_blank: 'Forma' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_rom, crunches_rom_options_for_select, { include_blank: 'ROM' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_core, crunches_core_options_for_select, { include_blank: 'Core' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_rhythm, crunches_rhythm_options_for_select, { include_blank: 'Ritmo' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.text_area :crunches_notes, placeholder: 'Notas', class: 'col-sm-8 form-control' %>
		</div>
	</div>
</div>
<br/>
