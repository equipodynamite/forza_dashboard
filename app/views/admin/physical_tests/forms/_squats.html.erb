<div class='row justify-content-sm-center squats-form'>
	<div class='col-sm-12 form-title'>
		<h5>Sentadillas (Squats)</h5>
	</div>
	<div class='col-sm-10 form-content'>
		<div class='form-group row justify-content-sm-center'>
			<%= f.number_field :squats, placeholder: 'Repeticiones', class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :squats_form, options_for_select_of('squats_form'), { include_blank: 'Forma' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :squats_rom, options_for_select_of('squats_rom'), { include_blank: 'ROM' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :squats_core, options_for_select_of('squats_core'), { include_blank: 'Core' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :squats_rhythm, options_for_select_of('squats_rhythm'), { include_blank: 'Ritmo' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.text_area :squats_notes, placeholder: 'Notas', class: 'col-sm-8 form-control' %>
		</div>
	</div>
</div>
<br/>
