<div class='row justify-content-sm-center crunches-form'>
	<div class='col-sm-12 form-title'>
		<h5>Abdominales (Crunches)</h5>
	</div>
	<div class='col-sm-10 form-content'>
		<div class='form-group row justify-content-sm-center'>
			<%= f.number_field :crunches, placeholder: 'Repeticiones', class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_form, options_for_select_of('crunches_form'), { include_blank: 'Forma' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_rom, options_for_select_of('crunches_rom'), { include_blank: 'ROM' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_core, options_for_select_of('crunches_core'), { include_blank: 'Core' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.select :crunches_rhythm, options_for_select_of('crunches_rhythm'), { include_blank: 'Ritmo' }, class: 'col-sm-8 form-control', required: true %>
		</div>
		<div class='form-group row justify-content-sm-center'>
			<%= f.text_area :crunches_notes, placeholder: 'Notas', class: 'col-sm-8 form-control' %>
		</div>
	</div>
</div>
<br/>
