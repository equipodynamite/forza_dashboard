<%= provide(:title, "Asistencias") %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"> Registrar asistencia </h5>
    <%= form_for Attendance.new do |f| %>
      <div class="form-field">
        <%= f.text_field :username, class: "typeahead form-control", placeholder: "Nombre de usuario" %>
      </div>
      <div class="form-field">
        <%= f.text_field :date, class: "form-control", value: Time.now.strftime("%m/%d/%Y"), "data-provide" => 'datepicker', readonly: true %>
      </div>
      <div class="form-field">
        <%= f.submit 'Registrar', class: "form-control btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>

<br>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"> Fechas </h5>
    <%= form_tag("attendance", method: "get") do %>
      <div class="form-field">
        <%= text_field_tag :start_date, value = TimeFormat.to_american_date(@start_date), class: "form-control", "data-provide" => 'datepicker', readonly: true %>
      </div>
      <div class="form-field">
        <%= text_field_tag :end_date, value = TimeFormat.to_american_date(@end_date), class: "form-control", "data-provide" => 'datepicker', readonly: true  %>
      </div>
      <div class="form-field">
        <%= submit_tag 'Buscar' ,class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>

<br>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"> <%= "Se han registrado un total de #{@attendances_count} asistencia(s) entre #{TimeFormat.to_american_date(@start_date)} y #{TimeFormat.to_american_date(@end_date)}" %> </h5>
    <%= line_chart @filtered_attendances %>
  </div>
</div>

<hr>
<%= render "admin/attendances/attendance_table" %>
</div>
